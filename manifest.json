{
  "name": "Link 2 Markdown",
  "description": "Make link in md with its description!",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Link 2 Markdown"
  },
  "background": {
    "service_worker": "scripts/contextMenuServiceWorker.js"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}